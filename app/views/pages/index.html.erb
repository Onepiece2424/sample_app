<h1>トップページ</h1>
<br>
<div class="row">
  <p class="col-md-3"><%= link_to "ログイン", new_user_session_path, class:"btn btn-primary" %></p>
  <p class="col-md-3"><%= link_to "新規登録", new_user_registration_path, class:"btn btn-primary" %></p>
  <p class="col-md-3"><%= link_to "ログアウト", destroy_user_session_path, class:"btn btn-primary" %></p>
  <p class="col-md-3"><%= link_to "詳細ページ", pages_path, class:"btn btn-primary" %></p>
</div>
<br>
<br>
<br>
<h3>Worry List</h3>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Worry</th>
      <th>Reason</th>
      <th>Approach</th>
      <th>詳細</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.date %></td>
        <td><%= page.worry %></td>
        <td><%= page.reason %></td>
        <td><%= page.approach %></td>
        <td><%= link_to "詳細", page_path(page.id) %></td>
        <td><%= link_to "編集", edit_page_path(page.id) %></td>
        <td><%= link_to "削除", page, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p><%= link_to "Worryの作成", new_page_path %></p>
