<h1>Would you like to solve your worries?</h1>
<br>
<br>
<div class="row">
  <p class="col-md-4"><%= link_to "ログイン", new_user_session_path, class:"btn btn-primary" %></p>
  <p class="col-md-4"><%= link_to "新規登録", new_user_registration_path, class:"btn btn-primary" %></p>
  <p class="col-md-4"><%= link_to "ログアウト", destroy_user_session_path, class:"btn btn-primary" %></p>
</div>
<br>
<br>
<br>
<h3>Worry List</h3>

<table>
  <div class="container">
  <div class="row">
  <thead>
    <tr>
      <th class="col-md-2">Date</th>
      <th class="col-md-2">Worry</th>
      <th class="col-md-2">Reason,Background</th>
      <th class="col-md-2">Approach</th>
      <th class="col-md-2">詳細/編集/削除</th>
    </tr>
  </thead>
  </div>
  </div>
  <tbody>
  <div class="container">
  <div class="row">
    <% @pages.each do |page| %>
      <tr>
        <td class="col-md-2"><%= page.date %></td>
        <td class="col-md-2"><%= page.worry %></td>
        <td class="col-md-2"><%= page.reason %></td>
        <td class="col-md-2"><%= page.approach %></td>
        <td class="col-md-2"><%= link_to "詳細", page_path(page.id) %>
        <%= link_to "編集", edit_page_path(page.id) %>
        <%= link_to "削除", page, method: :delete %></td>
      </tr>
    <% end %>
  </div>
  </div>
  </tbody>
</table>
<br>
<p><%= link_to "Create a Worry", new_page_path %></p>
