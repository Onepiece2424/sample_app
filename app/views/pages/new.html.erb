<h1>Would you like to solve your worries?</h1>
<br>
<br>
<div class="container">
<div class="row">
<%= form_with(model: @page, local: true) do |form| %>
  <div class="col-md-2">
    <%= form.label :date %>
    <%= form.text_field :date %>
  </div>

  <div class="col-md-2">
    <%= form.label :worry %>
    <%= form.text_area :worry %>
  </div>

  <div class="col-md-2">
    <%= form.label :reason, "Reason,Background" %>
    <%= form.text_area :reason %>
  </div>

  <div class="col-md-2">
    <%= form.label :approach %>
    <%= form.text_area :approach %>
  </div>
  <br>
  <div class="col-md-2">
    <%= form.submit "Worryの登録" %>
  </div>
<% end %>
</div>
</div>
<br>
<p><%= link_to "トップページ", root_path, class:"btn btn-primary" %></p>
