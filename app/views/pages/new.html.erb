<h1>Would you like to solve your worries?</h1>
<br>
<br>
<div class="container">
<div class="row">
<%= form_with(model: @page, local: true) do |form| %>
  <div class="col-md-2">
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div class="col-md-2">
    <%= form.label :category %>
    <%= form.select :category, [["お金", "お金"], ["健康", "健康"], ["恋愛", "恋愛"], ["キャリア", "キャリア"], ["その他", "その他"]], include_blank: "選択して下さい" %>
  </div>

  <div class="col-md-2">
    <%= form.label :worry %>
    <%= form.text_area :worry %>
  </div>

  <div class="col-md-2">
    <%= form.label :thinking, "Thinking" %>
    <%= form.text_area :thinking %>
  </div>

  <div class="col-md-2">
    <%= form.label :approach %>
    <%= form.text_area :approach %>
  </div>
  <br>
  <div class="col-md-2">
    <%= form.submit "Create a worry" %>
  </div>
<% end %>
</div>
</div>
<br>
<p><%= link_to "Back to the worry list", pages_path, class:"btn btn-primary" %></p>
